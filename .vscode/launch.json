{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "node",
          "request": "launch",
          "name": "server",
          "console": "integratedTerminal",
          "program": "${workspaceFolder}/server.js",
          "internalConsoleOptions": "neverOpen",
          "runtimeExecutable": "node",
          // "runtimeArgs": [
          //     "--max-old-space-size=4096"
          // ],
          "restart": true,
          "skipFiles": [
              "<node_internals>/**",
              "**/node_modules/**"
          ]
      }
  ]
}